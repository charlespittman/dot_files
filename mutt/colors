color index       black           red             "~s'\\<(fail)|([0-9]? errors?)'"
color index       brightred       default         "~s'errors'"
color index       brightgreen     default         "~s'(no errors)|(\\<ok\\>)'"
color index       brightred       default         "~s'\\<(problem)'"
color index       brightwhite     brightred       "~s'urgent'
